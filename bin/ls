<?php
include('./lib/spwd');
if (!$uargs||$uargs=='') $spwd=$pwd;
if (!file_exists('.'.$spwd)) echo 'LS: "'.$spwd.'": File or directory doesn\'t exists.<br>';
elseif (!is_dir('.'.$spwd)) echo 'LS: "'.$spwd.'": Is not directory.<br>';
else {
	if ($handle = opendir('.'.$spwd)) {
		while (false !== ($entry = readdir($handle))) if ($entry != '.' && $entry != '..') echo $entry.'&nbsp;&nbsp;&nbsp;';
		closedir($handle);
	}
	echo '<br>';
}